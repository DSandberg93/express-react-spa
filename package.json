{
  "name": "express-react-spa",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "rimraf": "^3.0.2",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start:dev_client": "cross-env REACT_APP_API_HOST=localhost REACT_APP_API_PORT=1337 react-scripts start",
    "start:dev_api": "cross-env NODE_ENV=development HOST=localhost PORT=1337 nodemon --watch ./server.js --watch ./src/api --exec babel-node -r dotenv/config server",
    "start:api": "cross-env NODE_ENV=production HOST=localhost PORT=1337 babel-node -r dotenv/config server dotenv_config_NODE_ENV=production",
    "build:client": "rimraf dist-client && react-scripts build && mv build dist-client",
    "build": "npm run build:client",
    "start": "concurrently \"npm run start:dev_client\" \"npm run start:dev_api\"",
    "start:prod": "npm run build && npm run start:api",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-plugin-react": "^7.21.5",
    "nodemon": "^2.0.6"
  }
}
